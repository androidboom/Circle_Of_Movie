<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    
    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/web_bg_download2x" />

    <com.example.liubo.world_of_movie.BaseView.CountDownProgressView
        android:id="@+id/saplashTimeBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        app:circSolidColor="#ffffff"
        app:circFrameColor="#ffffff"
        app:progressColor="@color/ssf_main_color"
        app:textColor="#000000"
        />
</RelativeLayout>